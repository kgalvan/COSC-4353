package mastermind;


import org.junit.jupiter.api.Test;

import static org.junit.jupiter.api.Assertions.assertEquals;
import static org.junit.jupiter.api.Assertions.assertTrue;

public class MasterMindTest {
    @Test
    public void Canary() {
        assertTrue(true);
    }
    @Test
    public void win()
    {
        MasterMind user = new MasterMind();
        assertEquals("none",user.win());
    }
    @Test
    public void generateSolution() //returns array full of zeros
    {
        MasterMind user = new MasterMind();
        int testArray[] = user.generateSolution();
        assertTrue(testArray!=null);
    }
    @Test
    public void compare()
    {
        MasterMind user = new MasterMind();
        int testArray[] = user.generateSolution();
        int userArray[] = testArray;
        boolean same = user.compare(testArray,userArray);
        assertEquals(true,same);
    }

    @Test
    public void tenDifferentInts()
    {
        MasterMind user = new MasterMind();
        int testArray[] = user.generateSolution();
        boolean unique = true;
        for (int i = 0; i < 6; i++) {
            for (int j = 0; j < 6; j++) {
                if (testArray[i] == testArray[j] && i != j) {
                    unique = false;
                }
            }
        }
        assertEquals(true, unique);
    }
}
