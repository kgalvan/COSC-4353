package guessinggame;

import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.*;

public class GuessingGameTest{
    GuessingGame guessingGame = new GuessingGame();

    @Test
    void Canary(){
        assertTrue(true);
    }

    @Test
    void scoreIsZero(){
        assertEquals(0,guessingGame.getScore("oekmny",""));
    }
    @Test
    void scoreIsOneMConsonant() {
        assertEquals(1,guessingGame.getScore("oekmny","m"));

    }
    @Test
    void scoreIsTwoOVowel() {
        assertEquals(2, guessingGame.getScore("oekmny", "o"));
    }
    @Test
    void scoreIsOneConsonant() {
        assertEquals(1, guessingGame.getScore("oekmny", "n"));
    }
    @Test
    void scoreIsTwoVowel() {
        assertEquals(2, guessingGame.getScore("oekmny", "e"));
    }
    @Test
    void scoreIsTwoTwoConsonants() {
        assertEquals(2, guessingGame.getScore("oekmny", "mn"));
    }
    @Test
    void scoreIsFourTwoVowels() {
        assertEquals(4, guessingGame.getScore("oekmny", "oe"));
    }
    @Test
    void scoreIsThreeOneConsonantOneVowel() {
        assertEquals(3, guessingGame.getScore("oekmny","mo"));
    }
    @Test
    void scoreIsZeroLetterNotInScrambledWord() {
        assertEquals(0, guessingGame.getScore("oekmny","a"));
    }

}
