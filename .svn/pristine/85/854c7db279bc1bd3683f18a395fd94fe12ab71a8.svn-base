package mastermind;
import java.util.*;
import java.util.Random;

public class MasterMind {
    public String win() {
        return "none";
    }
    public static int[] generateSolution(){
        int[] solution = new int [6];
        ArrayList<Integer> availableColors = new ArrayList<Integer>();
        for (int i = 0; i < 10; i++) {
            availableColors.add(new Integer(i));
        }
        Collections.shuffle(availableColors);

        Integer[] availIntegerArray = availableColors.toArray(new Integer[availableColors.size()]);
        int[] availableIntArray = new int [10];
        for (int i = 0; i < 10; i++) {
            availableIntArray[i] = availIntegerArray[i].intValue();
        }
        for (int i = 0; i < 6; i++) {
            solution[i] = availableIntArray[i];
        }
        
        return solution;
    }
    public static boolean compare (int userArray[], int gameArray[]) {
        boolean allSame = true;
        for (int x = 0; x < 6; x++) {
            if (userArray[x] != gameArray[x]) {
                allSame = false;
            }
        }
        return allSame;
    }

}
