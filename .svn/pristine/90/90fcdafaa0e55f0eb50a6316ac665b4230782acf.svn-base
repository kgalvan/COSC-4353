package guessinggame;

import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.*;

public class GuessingGameTest{
    GuessingGame guessingGame = new GuessingGame();

    @Test
    void Canary(){
        assertTrue(true);
    }

    @Test
    void showUserScore(){
        assertEquals(0,guessingGame.getScore());
    }

    @Test
    void showWordFromList(){
        assertEquals("monkey",guessingGame.pickWord());
    }

    @Test
    void addOnePointToScore(){
        guessingGame.addOnePoint();
        assertEquals(1,guessingGame.getScore());
    }

    @Test
    void addTwoPointsToScore(){
        guessingGame.addTwoPoints();
        assertEquals(2,guessingGame.getScore());
    }

    @Test
    void addThreePointsToScore(){
        guessingGame.addOnePoint();
        guessingGame.addTwoPoints();
        assertEquals(3,guessingGame.getScore());
    }
    @Test
    void addSevenPointsToScore(){
        guessingGame.addOnePoint();
        guessingGame.addOnePoint();
        guessingGame.addOnePoint();
        guessingGame.addTwoPoints();
        guessingGame.addTwoPoints();
        assertEquals(7,guessingGame.getScore());
    }

    @Test
    void setScoreToZeroIfInvalidLetter(){
        guessingGame.addOnePoint();
        guessingGame.invalidLetter();
        assertEquals(0,guessingGame.getScore());
    }
}
