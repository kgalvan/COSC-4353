package mastermind;
import java.awt.*;
import java.util.*;

public class MasterMind
{
    static Color[] userGuess;
    public static Color[] solution;
    static Color[] output;

    protected MasterMind(Collection <Color> guessInput)
    {
         userGuess = guessInput.toArray(new Color[6]);
    }
    public static Color[] guess()
    {
        output = new Color[6];
        int currentIndex = 0; //index of output

        for(int x = 0; x < 6; x++)
        {
            for(int y = 0; y < 6; y++)
            {
                if(x==y)
                {
                    if(solution[x]==userGuess[y])
                    {
                        output[currentIndex]= Color.BLACK;
                        currentIndex++;
                    }
                }
                else if(solution[x]==userGuess[y])
                {
                    output[currentIndex] = Color.GRAY;
                    currentIndex++;
                }
            }
        }
        return output;
    }
}
