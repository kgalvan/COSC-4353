package guessinggame;

import okhttp3.OkHttpClient;
import okhttp3.Request;
import okhttp3.Response;

import java.io.IOException;

public class SpellCheckerService implements SpellChecker{

    public boolean isSpellingCorrect(String userInput)throws IOException{
        OkHttpClient client = new OkHttpClient();
        Request request = new Request.Builder()
                .url("http://agile.cs.uh.edu/spell?check=" + userInput)
                .build();
        Response response = client.newCall(request).execute();
        String websiteResponse = response.body().string();
        return Boolean.parseBoolean(websiteResponse);
    }
}
